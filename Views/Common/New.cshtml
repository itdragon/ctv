@{
    ViewBag.Title = "CMS - Cộng tác viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using cms.business
@using cms.business.CMS.NewsSvc
@using cms.business.SystemSvc;
@model NewsBO
@section INC_META
{
    <title>@ViewBag.Title</title>
}
@section INC_CSS
{
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.css")" type="text/css" media="all">
    <link rel="stylesheet" href="@Url.Content("~/Content/new.css")">
    <link rel="stylesheet" href="@Url.Content("~/Scripts/datetimepicker/jquery.datetimepicker.css")">
}
@section INC_JS
{
    <script type="text/javascript">
        function myCallBackNews(tagimg) {
            //tinymce.execCommand("mceInsertContent", false, tagimg);
            CKEDITOR.instances["content"].insertHtml(tagimg);
        }
    </script>
}
<!-- Add new -->
@using (Html.BeginForm("New", "Common", FormMethod.Post,
new { name = "myForm", id = "myForm", enctype = "multipart/form-data" }
))
{
    <script type="text/javascript">
        document.body.className = document.body.className.replace('no-js', 'js');
    </script>
    <div id="wpcontent">
        <div id="wpbody">
            <div id="wpbody-content">
                <div class="wrap">
                    <div id="icon-edit" class="icon32 icon32-posts-post">
                        <br />
                    </div>
                    @if (ViewBag.NewsID <= 0)
                    {
                        <h2>Tạo tin/chủ đề mới
                            <a href="@Url.Action("NewsList")" class="add-new-h2">Danh sách tin</a>
                            <a href="@Url.Action("Video")" class="add-new-h2">Danh sách video</a>
                            <a href="@Url.Action("Polls")" class="add-new-h2">Danh sách poll</a>
                        </h2>
                    }
                    else
                    {
                        <h2>Chỉnh sửa tin/chủ đề
                            <a href="@Url.Action("New")" class="add-new-h2">Thêm mới</a>
                            <a href="@Url.Action("NewsList")" class="add-new-h2">Danh sách tin</a>
                            <a href="@Url.Action("Video")" class="add-new-h2">Danh sách video</a>
                            <a href="@Url.Action("Polls")" class="add-new-h2">Danh sách poll</a>
                        </h2>
                    }
                    <div id="poststuff">
                        <div id="post-body" class="metabox-holder columns-2">
                            <div id="post-body-content">
                                <div id="titlediv">
                                    <div id="titlewrap">
                                        <input type="text" name="post_title" size="30" tabindex="1" id="title" autocomplete="off"
                                            required="true" value="@Model.Title" onblur="CheckExistName(this, 2)" placeholder="Nhập tiêu đề tin tức ở đây" />
                                        <input type="hidden" id="hfTitle" value="@Model.Title" />
                                        <div class="counter"><span id="TitleCount">0</span>/300</div>
                                    </div>
                                    <div class="inside">
                                        <div id="edit-slug-box">
                                            <strong>Url:</strong>
                                            <span id="url1" style="@(string.IsNullOrEmpty(Model.URL) ? "display:none" : "")">
                                                <span id="spanUrl">@Model.URL</span>
                                                <input type="button" id="EditUrl" value="Sửa" class="button button-highlighted" />
                                            </span>
                                            <span id="url2" style="display: none">
                                                <input type="text" id="txtUrl" name="txtUrl" value="@Model.URL" style="width: 50%" />
                                                <input type="button" id="UrlOK" value="OK" class="button button-highlighted" />
                                                <input type="button" id="UrlCancel" value="Cancel" class="button button-highlighted" />
                                                <span id="URLCount" style="margin-left:20px">0</span> ký tự
                                            </span>
                                        </div>
                                    </div>

                                </div>
                                <div id="postdivrich" class="postarea">
                                    <div id="wp-content-wrap" class="wp-editor-wrap tmce-active" style="margin-top:20px">
                                        <div id="wp-content-editor-tools" class="wp-editor-tools">
                                            <div style="width:400px;height:10px">
                                                @Html.Action("UploadImageNews", "Common", new { NewsId = ViewBag.NewsID, SiteId = ViewBag.SiteID })
                                            </div>
                                            <div class="button-search" style="float:right;text-align:right;left:0;width:500px">
                                                <a href="javascript:void(0);" onclick="AddVideoNews()">Thêm Video</a>
                                                <select id="cbShortCode" style="width:200px;padding:0;margin:0" onchange="AddShortCode()">
                                                    <option value="none">----- Chọn shortcode -----</option>
                                                    <option value="captionnews">Caption Image</option>
                                                    <option value="checklist">Check List</option>
                                                    <option value="arrowlist">Arrow List</option>
                                                    <option value="dropcap">Drop Caps</option>
                                                    <option value="infobox">Information box</option>
                                                    <option value="successbox">Success box</option>
                                                    <option value="warningbox">Warning box</option>
                                                    <option value="nextpage">Ngắt trang</option>
                                                    <option value="newscompare">So sánh sản phẩm</option>
                                                    <option value="gallerycompare">So sánh hình camera</option>
                                                    <option value="newsgallery">Gallery ảnh chụp từ camera thiết bị</option>
                                                    <option value="newsspecs">Bảng tính năng sản phẩm</option>
                                                    <option value="prediction">Chương trình game</option>
                                                    <option value="oldproduct">Danh sách máy đổi trả</option>
                                                    <option value="bannerpromote">Banner khuyến mãi</option>
                                                    <option value="survey">Câu hỏi khảo sát</option>
                                                    <option value="gameapp">Game-App</option>
                                                    <option value="polls">Thêm polls</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div id="wp-content-editor-container" class="wp-editor-container" style="clear:both">
                                            <textarea style="height:500px" id="content" name="content">@Html.Raw(Model.Content)</textarea>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- /post-body-content -->
                            <div id="postbox-container-1" class="postbox-container">
                                <div id="side-sortables" class="meta-box-sortables">
                                    <div id="submitdiv" class="postbox ">
                                        <div class="handlediv" title="Click to toggle">
                                            <br />
                                        </div>
                                        <h3 class='hndle'>
                                            <span>Xuất bản</span></h3>
                                        <div class="inside">
                                            <div class="submitbox" id="submitpost">
                                                <div id="minor-publishing">
                                                    <div id="minor-publishing-actions">
                                                        <div id="save-action">
                                                            <input type="submit" name="draft" id="save-post" value="Lưu nháp" tabindex="4"
                                                                class="button button-highlighted" />
                                                            <img src="@Url.Content("~/Content/images/wpspin_light.gif")" class="ajax-loading" id="draft-ajax-loading"
                                                                alt="" />
                                                        </div>
                                                        @if (Model.IsActived)
                                                        {
                                                        <div id="preview-action">
                                                            <a class="preview button" href="@SEOHelper.GenNewsDetailURL(Model)" target="_blank">Xem trên web</a>
                                                        </div>
                                                        }
                                                        @if (ViewBag.NewsID > 0)
                                                        {
                                                        <br /><div style="margin-top:10px">
                                                            <a class="preview button" href="https://www.thegioididong.com/tin-tuc/xem-truoc/@Model.NewsID" target="_blank">Xem trước</a>
                                                        </div>
                                                        }
                                                        <div class="clear">
                                                        </div>
                                                    </div>

    <link rel="stylesheet" href="@Url.Content("~/Content/newspreview.css")" type="text/css" />
</head>
<body>
    <section>
        <article id="idleftdetail" class="leftdetail">
            <!--Content-->
            <h1>@Html.Raw(ViewBag.Name)</h1>
            <div class="clr"></div>
            @if (Model != null && Model.Count > 0)
            {
                @Html.Raw(Model[0])
                if (Model.Count == 3)
                {
                <div id="productinfo" style="display: none;">
                    @Html.Raw(Model[2])
                </div>
                }
                <div class="clr"></div>
            }
        </article>
    </section>
    <script>
        var GL_CATEGORYID = '@ViewBag.CategoryID';
        var GL_ProductID = '@ViewBag.NewsID';
        var FirstPageView = 1;
        var intNewsId = '@ViewBag.NewsID';
    </script>
    <script defer="defer" async="async" src="@Url.Content("~/Scripts/newspreview.js")"></script>
</body>
</html>

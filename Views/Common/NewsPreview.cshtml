    <title>Xem trước bài tin tức</title>
    <link rel="publisher" href="https://plus.google.com/u/0/104496008508234446208" />
    <meta name="RATING" content="GENERAL" />
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta content="INDEX,FOLLOW" name="robots" />
    <meta name="viewport" content="width=device-width" />
    <meta name="copyright" content="Công ty Cổ phẩn Thế Giới Di Động" />
    <meta name="author" content="Công ty Cổ phẩn Thế Giới Di Động" />

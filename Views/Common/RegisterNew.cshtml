@{
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";
}
@section META_INC
{
    <title>@Html.Raw(ViewBag.titlePage)</title>
    <meta name="keywords" content="@Html.Raw(ViewBag.MetaKeywords)" />
    <meta name="description" content="@Html.Raw(ViewBag.MetaDescription)" />
}

@section CSS_INC
{
    <link rel="stylesheet" href="~/Content/jquery.mCustomScrollbar.css" />
}
@section JS_INC
{
    <script src="~/Scripts/jquery.newshome.js?v=@(cms.business.ConfigHelper.StaticContentVersion())"></script>
    <script src="~/Scripts/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Scripts/NewsDetail.min.js?v=@(cms.business.ConfigHelper.StaticContentVersion())"></script>
    <script src="~/Scripts/LoginUser.min.js?v=@(cms.business.ConfigHelper.StaticContentVersion())"></script>
    <script>
        var Index = '@ViewBag.PageIndex';
        var searchpage = 3;
    </script>
}
<div id="fb-root"></div>

<input type="hidden" value="215" id="hfCatID" />

<div class="main-left-wrapper" style="vertical-align: bottom; width: 50%;">
    <div class="containpresentpage">
        <div class="title">Kết nối với cộng đồng công nghệ số 1 Việt Nam với hơn @ViewBag.CountForumMember thành viên năng động.</div>
        <div class="containsubpresent">
            <div class="present">
                <div class="iconworld"></div>
                <div class="titlepresent">Tham gia cộng đồng tư vấn, chia sẻ công nghệ</div>
            </div>
            <div class="clearfix"></div>
            <div class="present">
                <div class="icontakepic"></div>
                <div class="titlepresent">Chia sẻ hình ảnh, cảm nhận, trải nghiệm bản thân</div>
            </div>
            <div class="clearfix"></div>
            <div class="present">
                <div class="iconnewsnew"></div>
                <div class="titlepresent">Cập nhật nhanh công nghệ mới</div>
            </div>
            <div class="clearfix"></div>
            <div class="present">
                <div class="icontransport"></div>
                <div class="titlepresent">Theo dõi đơn hàng</div>
            </div>
            <div class="clearfix"></div>
            <div class="present">
                <div class="iconpointsbonus"></div>
                <div class="titlepresent">Tích lũy điểm thưởng</div>
            </div>
        </div>
    </div>
</div>
<div class="main-right-wrapper" style="vertical-align: bottom; width: 40%;">
    <div class="loginform">
        <div class="titleLogin">Đăng ký thành viên</div>
        <div class="contentloginform">
                <div class="containelement">
                    <input type="text" placeholder="Họ và tên" class="inputtext" id="txtname" onkeypress="CheckRegister(event);" />
                </div>
                <div class="containelement">
                    <input type="text" placeholder="Email" class="inputtext" id="txtemailpr" onkeypress="CheckRegister(event);" />
                </div>
                <div class="containelement">
                    <input type="text" placeholder="Nhập lại email" class="inputtext" id="txtemail2" onblur="CheckTrueEmail();" onkeypress="CheckRegister(event);" />
                </div>
                <div class="containelement">
                    <input type="password" placeholder="Mật khẩu" class="inputtext" id="txtpasswordregister" onkeypress="CheckRegister(event);" />
                </div>
                <div class="containelement">
                    <input type="radio" name="gender" class="loginbtn" id="rdmale" value="1" checked="checked" />
                    <div class="titlerememberpass">Nam</div>
                    <input type="radio" name="gender" class="loginbtn" id="rdfemale" value="2" />
                    <div class="titlerememberpass">Nữ</div>
                    <div class="clearfix"></div>
                </div>
                <div class="buttonlogin">
                    <input type="button" id="btnLogin" class="btn" value="ĐĂNG KÝ" onclick="SubmitRegisterInformation()" />
                </div>
            <div class="other">
                <div class="signup">
                    Đã có tài khoản? <a href="/ctv/dang-nhap">Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>
